<span>
  {{#if isLogged}}
  {{i18n 'Your are logged. Logout first'}}
  {{else}}
  <form id='formlogin'>
    {{#i18n}}{{loginError}}{{/i18n}}<br>
    {{i18n 'Username'}}: <input type="text" autocomplete="username" id="login"> <br>
    {{i18n 'Password'}}: <input type="password" autocomplete="current-password" id="password"><br>
    {{i18n 'Remember me'}}: <input type="checkbox" id="remember"><br>
    <input type="submit" id='loginbutton' value="{{i18n 'Login'}}">
    {{i18n 'New here?'}} <a href="#login" id='registerlink'>{{i18n 'Register Here!'}}</a>
  </form>
  {{#if registerMode}}
  <h2>{{i18n 'New user'}}</h2>
  <div id="registration-form">
    <form>
      {{i18n 'Username'}}: <input type="text" id="registerusername">
      {{#i18n}}{{registerErrors.username}}{{/i18n}}<br>
      {{i18n 'Password'}}: <input type="password" id="registerpassword">
      {{i18n 'Confirm password'}}: <input type="password" id="registerpasswdbis">
      {{#i18n}}{{registerErrors.passwd}}{{/i18n}}{{#i18n}}{{registerErrors.passwdbis}}{{/i18n}}<br>
      {{i18n 'Email'}}: <input type="text" id="registeremail">
      {{#i18n}}{{registerErrors.email}}{{/i18n}}<br>
      <input type="submit" id='registerbutton' value="{{i18n 'Create user'}}">
    </form>
  </div>
  {{/if}}

  {{/if}}
</span>